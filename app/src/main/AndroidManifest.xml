<manifest package="br.com.cast.turmaformacao.controledeestoque"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".InventoryControlApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.activities.InventoryListActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="ANDROID.INTENT.ACTION.MAIN"/>
                <category android:name="ANDROID.INTENT.CATEGORY.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controllers.activities.ProductFormActivity"
            android:label="@string/app_name"/>

    </application>

</manifest>
