<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="4dp"
                                    android:layout_marginTop="4dp"
                                    card_view:cardCornerRadius="4dp"
                                    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="8dp"
        android:paddingStart="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:contentDescription="@string/lbl_product_image"
                android:gravity="center"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="16dp"
                android:src="@drawable/gradient_divider"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:orientation="vertical"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="24dp">

                <TextView
                    android:id="@+id/textViewNameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_headline_material"/>

                <TextView
                    android:id="@+id/textViewPriceProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_subhead_material"/>

                <TextView
                    android:id="@+id/textViewQtdProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/abc_text_size_subhead_material"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="4dp">

            <android.support.v7.widget.ActionMenuView
                android:id="@+id/actionMenuCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"/>
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>